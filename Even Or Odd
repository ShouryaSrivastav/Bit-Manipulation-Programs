public class BitManipulation{
    public static void evenorodd(int n) {
        int bitMask = 1;
        if((n & bitMask) == 0){ // when lsb is == 0
            System.out.println(n+" is even");

        }
        else{   // when lsb == 1
            System.out.println(n+" is odd");
        }
    }
    public static void main(String[] args) {
        int n= 4;
        evenorodd(n);
    }
}
